<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent" android:layout_height="match_parent"

    tools:context=".AddPersonNameActivity" android:orientation="vertical" android:gravity="center_horizontal">

    <TextView

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:text="Add a new Person Name"

        android:textSize="30sp"

        android:textAlignment="center"

        android:textStyle="bold"

        android:textColor="#FF5722"

        android:layout_margin="15dp"/>

    <View

        android:layout_width="match_parent"

        android:layout_height="3dp"

        android:background="#3F51B5"

        android:layout_marginLeft="10dp"

        android:layout_marginRight="10dp"

        />

    <LinearLayout

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_marginTop="15dp"

        android:layout_marginLeft="10dp"

        android:layout_marginRight="10dp">

        <TextView

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:text="Name"

            android:textSize="20sp"

            android:textStyle="bold"

            android:textColor="#203291"

            android:layout_marginRight="10dp"/>

        <EditText

            android:id="@+id/addPersonNameET"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:hint="Name" />

    </LinearLayout>



    <LinearLayout

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_marginTop="15dp"

        android:layout_marginLeft="10dp"

        android:layout_marginRight="10dp">

        <TextView

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:text="Gender"

            android:textSize="20sp"

            android:textStyle="bold"

            android:textColor="#203291"

            android:padding="10dp"

            android:layout_marginRight="10dp"/>

        <RadioGroup

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <RadioButton

                android:id="@+id/girlRadioButton"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:padding="10dp"

                android:layout_marginLeft="20dp"

                android:checked="true"

                android:text="Girl"/>

            <RadioButton

                android:id="@+id/boyRadioButton"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:padding="10dp"

                android:layout_marginLeft="20dp"

                android:text="Boy"/>

        </RadioGroup>

    </LinearLayout>

    <Button

        android:id="@+id/addNameButton"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:text="Add new Person Name"/>



</LinearLayout>
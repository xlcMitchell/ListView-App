<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TouristDestinationDetailsActivity">

    <ImageView
        android:id="@+id/destinationDetailsImage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/redwoodnightlights"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="15dp" />

    <TextView
        android:id="@+id/destinationTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Red Wood"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@id/destinationDetailsImage"
        app:layout_constraintBottom_toBottomOf="@id/destinationDetailsImage"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="30dp" />

    <TextView
        android:id="@+id/destinationDescriptionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="description"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="@id/destinationDetailsImage"
        app:layout_constraintEnd_toEndOf="@id/destinationDetailsImage"
        app:layout_constraintTop_toBottomOf="@id/destinationDetailsImage"
        app:layout_constraintBottom_toBottomOf="@id/destinationDetailsImage" />

</androidx.constraintlayout.widget.ConstraintLayout>
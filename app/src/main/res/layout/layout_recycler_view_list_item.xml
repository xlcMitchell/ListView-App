<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/personCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#CDDC8C"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/personCardImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/girl"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/personCardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Person name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#E91E63"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toRightOf="@id/personCardImage"
            app:layout_constraintTop_toTopOf="@id/personCardImage"
            app:layout_constraintBottom_toBottomOf="@id/personCardImage" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>